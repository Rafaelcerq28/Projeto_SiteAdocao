<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadastrarCandidato</servlet-name>
        <servlet-class>br.com.siteadocao.controler.CadastrarCandidato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExibirImg</servlet-name>
        <servlet-class>br.com.siteadocao.controler.ExibirImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleProductArea</servlet-name>
        <servlet-class>br.com.siteadocao.controler.ControleProductArea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Confirmacao</servlet-name>
        <servlet-class>br.com.siteadocao.controler.Confirmacao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleCategoria</servlet-name>
        <servlet-class>br.com.siteadocao.controler.ControleCategoria</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarCandidato</servlet-name>
        <url-pattern>/CadastrarCandidato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibirImg</servlet-name>
        <url-pattern>/ExibirImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleProductArea</servlet-name>
        <url-pattern>/ControleProductArea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Confirmacao</servlet-name>
        <url-pattern>/Confirmacao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleCategoria</servlet-name>
        <url-pattern>/ControleCategoria</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
